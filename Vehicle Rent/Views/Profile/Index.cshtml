@using Vehicle_Rent.ViewModels.Profile;
@model ProfileDetailVM;



<div class="site-section bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5 section-2-title">
            <div class="col-md-12" style="margin-top:30px;">
                <h2 class="mb-4">@ViewBag.Title</h2>
            </div>
        </div>
        <div class="row align-items-stretch">

            <div class="col-lg-12 col-md-8 mb-10" style="margin-bottom:10px;">
                <div class="post-entry-1 h-100 person-1">

                    <img src="@Model.Image" alt="Image"
                         class="img-fluid">

                    <div class="post-entry-1-contents">
                        <div style="display:flex">
                            <span class="meta">Client</span>
                            <h2>@Model.Name</h2>
                        </div>
                       
                        <p>@Model.UserName</p>
                        <p>
                            Joined the platform on @Model.JoinedOn.ToString("yyyy-MM-dd")
                        </p>
                   
                        <p>Vehicles in possession : @Model.numberOfvehicleCopiesInposession</p>
                        <p>Returned Vehicles : @Model.numberOfRentedVehicleCopies</p>
                      
                    </div>
                </div>
            </div>
            

        </div>
    </div>
</div>


