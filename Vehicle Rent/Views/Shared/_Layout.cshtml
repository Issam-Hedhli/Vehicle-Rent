
<!doctype html>
<html lang="en">

<head>
    <title>CarRental &mdash; Free Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="@Url.Content("~/fonts/icomoon/style.css")">

    <link rel="stylesheet" href="@Url.Content("~/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/bootstrap-datepicker.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/jquery.fancybox.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/owl.carousel.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/owl.theme.default.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/fonts/flaticon/font/flaticon.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/aos.css")">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")">

</head>

<body>


    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target" >
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>



        <header class="site-navbar site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center position-relative">

                    <div class="col-3">
                        <div class="site-logo" style="margin-right:100px;">
                            <a href="index.html"><strong>Car Rental</strong></a>
                        </div>
                    </div>

                    <div class="col-9  text-right">

                        <span class="d-inline-block d-lg-none"><a href="#" class=" site-menu-toggle js-menu-toggle py-5 "><span class="icon-menu h3 text-black"></span></a></span>

                       
                            
                        @if (User.Identity.IsAuthenticated)
                        {
                            <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                                <ul class="site-menu main-menu js-clone-nav ml-auto">
                                    <li class="active"><a href="index.html" class="nav-link">Home</a></li>
                                    <li><a href="listing.html" class="nav-link">About Us</a></li>
                                    <li><a href="listing.html" class="nav-link">Listing</a></li>
                                    <li><a href="testimonials.html" class="nav-link">Testimonials</a></li>
                                    <li class="nav-item ">
                                        <a class="nav-link" asp-controller="Auth" asp-action="Logout">Logout</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                        else
                        {
                            <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                                <ul class="site-menu main-menu js-clone-nav ml-auto">
                                    <li class="active"><a href="index.html" class="nav-link">Home</a></li>
                                    <li><a href="listing.html" class="nav-link">About Us</a></li>
                                    <li><a href="listing.html" class="nav-link">Listing</a></li>
                                    <li><a href="testimonials.html" class="nav-link">Testimonials</a></li>
                            
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                                </li>
                            </ul>
                        </nav>


                           
                        }


                        
                    </div>


                </div>
            </div>
        </header>
        
        @RenderBody()

       

    </div>

    <script src="@Url.Content("~/js/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/js/popper.min.js")"></script>
    <script src="@Url.Content("~/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.sticky.js")"></script>
    <script src="@Url.Content("~/js/jquery.waypoints.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.animateNumber.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.fancybox.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.easing.1.3.js")"></script>
    <script src="@Url.Content("~/js/bootstrap-datepicker.min.js")"></script>
    <script src="@Url.Content("~/js/aos.js")"></script>

    <script src="@Url.Content("~/js/main.js")"></script>

</body>

</html>
