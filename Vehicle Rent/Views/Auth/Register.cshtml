@using Vehicle_Rent.ViewModels.AuthVM;
@model RegisterVM

<div class="hero" style="background-color: #f0f0f0;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 blog-content" style="margin-bottom:100px; height:1200px;">
                <div class="pt-5">
                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Register</h3>
                        <form asp-action="Register" method="POST">
                            <div class="form-group">
                                <input asp-for="Name" type="text" placeholder="name" class="form-control" id="name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" placeholder="Email" class="form-control" id="email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            

                            <div class="form-group">
                                <input asp-for="Password" type="password" placeholder="Password" class="form-control" id="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <input asp-for="ConfirmationPassword" placeholder="Confirmation Password" type="password" class="form-control" id="ConfirmationPassword" />
                                <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="ImageUrl" type="text" id="imageUrlInput" placeholder="Photo URL" class="form-control" onchange="updateImage()" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" asp-for="RememberMe" id="remember_me" name="remember_me" value="true" asp-action="Remember me">
                                    <label class="custom-control-label" for="remember_me">Remember me</label>
                                </div>
                            </div>
                            <div style="display:flex;">
                                <div style="display:flex; ">
                                    <h6>
                                        Already have an account?
                                    </h6>
                                    <a asp-controller="Auth" asp-action="Login">
                                        <h6>
                                            &nbsp;  Login
                                        </h6>
                                    </a>
                                </div>
                                <div class="form-group" style="display:flex; justify-content: center; align-items: center;">
                                    <input type="submit" value="Register" class="btn btn-primary btn-md text-white" style="margin-left:350px;">
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["ErrorMessage"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    /* Style the input field */
    #imageUrlInput {
        display: block; /* Make it fill the available width */
        width: 100%; /* Set a fixed width if needed */
        padding: 0.5rem 1rem; /* Add some padding */
        border: 1px solid #ccc; /* Define a border */
        border-radius: 4px; /* Add rounded corners */
        font-size: 1rem; /* Set the font size */
    }

        /* Style the placeholder text */
        #imageUrlInput::placeholder {
            color: #999; /* Set the placeholder text color */
        }

    /* Style the validation message */
    .text-danger {
        display: block; /* Make it display on a new line */
        margin-top: 0.5rem; /* Add some margin above the message */
        font-size: 0.8rem; /* Set a smaller font size for the message */
        color: red; /* Set the color to red for error messages */
    }

</style>
<script>
    function updateImage() {
        var imageUrl = document.getElementById("imageUrlInput").value;
        document.getElementById("photo_img").src = imageUrl;
    }
</script>