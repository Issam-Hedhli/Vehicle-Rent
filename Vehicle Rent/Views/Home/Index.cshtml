<div class="hero" style="background-image: url('images/hero_1_a.jpg'); background-color: #f0f0f0;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="row mb-5">
                    <div class="col-lg-7 intro">
                        <h1><strong>Rent a car</strong> is within your finger tips.</h1>
                    </div>
                </div>
                <form asp-controller="VehicleCatalogue" asp-action="Vehicles" class="trip-form">

                    <div class="row align-items-center">

                        <div class="mb-3 mb-md-0 col-md-4">
                            <select name="Company" class="custom-select form-control">
                                <option value ="">Company</option>
                                @foreach (var company in ViewBag.Companies)
                                {
                                @if (ViewBag.CompanyValue != null && company== ViewBag.CompanyValue)
                                {
                                        <option value="@company" selected>@company</option>
                                }
                                else
                                {
                                       <option value="@company">@company</option> 
                                }

                                }
                            </select>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-4">
                            <select name="Model" class="custom-select form-control">
                                <option value="">Model</option>
                                @foreach (var modell in ViewBag.Models)
                                {
                                    @if (ViewBag.ModelValue != null && modell == ViewBag.ModelValue)
                                    {
                                        <option value="@modell" selected>@modell</option>
                                    }
                                    else
                                    {
                                        <option value="@modell">@modell</option>
                                    }
                                }
                            </select>
                        </div>
                        

