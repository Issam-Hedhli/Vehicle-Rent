                            <input name="minPrice" type="number" class="form-control" placeholder="↓ Min Price">
                            </input>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <input name="maxPrice" type="number" class="form-control" placeholder="↑ Max Price">
                            </input>
                        </div> *@
                        <div class="mb-3 mb-md-0 col-md-4" >
                            <input type="submit" value="Search" class="btn btn-primary btn-block py-3">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>






    