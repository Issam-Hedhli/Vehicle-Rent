@using Vehicle_Rent.ViewModels.VehicleVM;
@model List<VehicleDetailVM>;

<div class="site-section bg-light" style="margin-top:80px;">

    <div class="container">
        <div class="row" style="margin-bottom:20px;">
            <div asp-controller="VehicleCatalogue" class="col-lg-7" >
                <h2 class="section-heading"><strong>@ViewBag.Title</strong></h2>
            </div>
        </div>
        <div class="row align-items-center justify-content-center" style="margin-bottom:20px;">
            <div class="col-lg-10">

                <form class="trip-form">

                    <div class="row align-items-center">

                        <div class="mb-3 mb-md-0 col-md-2">
                            <input name="Company" placeholder="Company" class="custom-select form-control">
                            </input>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2" >
                            <input name="Model" type="text"  placeholder="Model" class="custom-select form-control">
                            </input>
                        </div>

                        <div class="mb-3 mb-md-0 col-md-1">
                            <input name="minPrice" type="text" class="form-control" placeholder="↓">
                            </input>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-1">
                            <input name="maxPrice" type="text" class="form-control" placeholder="↑">
                            </input>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <div class="form-control-wrap">
                                <input type="text" id="cf-4" placeholder="Since" class="form-control datepicker px-3">
                                <span class="icon icon-date_range"></span>
                            </div>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2">
                            <div class="form-control-wrap">
                                <input type="text" id="cf-4" placeholder="To" class="form-control datepicker px-3">
                                <span class="icon icon-date_range"></span>
                            </div>
                        </div>
                        <div class="mb-3 mb-md-0 col-md-2" >
                            <input type="submit" value="Search" class="btn btn-primary btn-block py-3">
                        </div>
                    </div>

                </form>

            </div>
        </div>

        
        <div class="row" style="margin-top:50px;">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4" >
                    <div class="listing d-block align-items-stretch" >
                        <div class="listing-img h-100 mr-4" style="width:300px; height:600px;">
                                <img src="@item.Photo" alt="Image" class="img-fluid">
                        </div>
                        <div class="listing-contents h-100">
                            <h3>@item.Name</h3>
                            <div>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <p>@item.Description</p>
                                }
                                else
                                {
                                    <p>No description available</p>
                                }
                                <p><a asp-controller="VehicleCatalogue" asp-action="Vehicle" asp-route-vehicleId=@item.Id class="btn btn-primary btn-sm">Rent Now</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

